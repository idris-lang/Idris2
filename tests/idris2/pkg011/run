. ../../testutils.sh

for t in dot dot-slash dot-slash-dot; do
    cd $t
    echo $t
    idris2 --build testpkg.ipkg
    rm -rf  build/
    check --find-ipkg Main.idr
    rm -rf  build/
    cd ..
done

echo dot-slash-name-slash
cd dot-slash-name-slash
idris2 --build testpkg.ipkg
rm -rf build/
check --find-ipkg src/Main.idr
rm -rf build/
cd ..

echo sibling/pkg
cd sibling/pkg
idris2 --build testpkg.ipkg
rm -rf build/
cd ../..
